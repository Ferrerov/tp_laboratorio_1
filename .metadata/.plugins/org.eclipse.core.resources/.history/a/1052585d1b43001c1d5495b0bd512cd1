#include "Employee.h"

Employee* employee_new()
{
	Employee* NuevoEmpleado = NULL;
	NuevoEmpleado = (Employee*) malloc(sizeof(Employee));

	if(NuevoEmpleado != NULL)
	{
		NuevoEmpleado->id = 0;/////////////CORREGIR
		strcpy(NuevoEmpleado->nombre, " ");
		NuevoEmpleado->horasTrabajadas = 0;
		NuevoEmpleado->sueldo = 0;
	}

	return NuevoEmpleado;
}
Employee* employee_newParametros(int idStr,char* nombreStr,int horasTrabajadasStr, float sueldoStr) //CORREGIR
{
	Employee* pNuevoEmpleado = NULL;
	pNuevoEmpleado = employee_new();

	if(pNuevoEmpleado != NULL)
	{
		pNuevoEmpleado->id = idStr;/////////////CORREGIR
		strcpy(pNuevoEmpleado->nombre, nombreStr);
		pNuevoEmpleado->horasTrabajadas = horasTrabajadasStr;
		pNuevoEmpleado->sueldo = sueldoStr;
	}

	return pNuevoEmpleado;
}

void employee_delete(Employee* this)
{
	if(this != NULL)
	{
		free(this);
	}
}
